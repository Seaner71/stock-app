
<h1> My Stocks</h1>
<%= @stocks %>
<%= @stocks.empty? %>
<% if @stocks.empty? %>
  <%= "Hello" %>
  <% end %>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Company Name</th>
      <th>Ticker</th>
      <th>Sector</th>
      <th>Current Price</th>
      <th>Market Value</th>

    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <% if stock.user_id == current_user.id %>
        <% @stock_quote = StockQuote::Stock.quote(stock.ticker) %>
        <% @shares = 1000 %>
        <tr>
          <td><%= link_to @stock_quote.name, stock %></td>
          <td><%= stock.ticker.upcase %></td>
          <td><%= @stock_quote.sname %></td>
          <td><%= @stock_quote.l %></td>
          <td><%= @shares * @stock_quote.l.to_i %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Stock', new_stock_path, class: 'btn btn-default' %>
<% color = [] %>

<% 6.times do %>
  <% color.push('#' + "%06x" % (rand * 0xffffff)) %>
<% end %>
<%= color %>
<%= pie_chart @stocks.group(:ticker).sum(@shares * @stock_quote.l.to_f), colors: color %>
