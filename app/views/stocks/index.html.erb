
<h1> My Stocks</h1>
<% if @stocks.empty? %>
  <h2> <%= "Buy some stocks!!" %> </h2>
  <% end %>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Company Name</th>
      <th>Ticker</th>
      <th>Shares</th>
      <th>Sector</th>
      <th>Current Price</th>
      <th>Market Value</th>

    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>

        <% @stock_quote = StockQuote::Stock.quote(stock.ticker) %>
        <tr>
          <td><%= link_to @stock_quote.name, stock %></td>
          <td><%= stock.ticker.upcase %></td>
          <td><%= stock.shares %></td>
          <td><%= stock.sname %></td>
          <td><%= @stock_quote.l %></td>
              <% @market_value = (stock.shares * @stock_quote.l.to_f)%>
          <td> <%= number_to_currency(@market_value) %></td>
        </tr>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a Stock', new_stock_path, class: 'btn btn-default' %>
<% color = [] %>

<% 6.times do %>
  <% color.push('#' + "%06x" % (rand * 0xffffff)) %>
<% end %>
<% color %>

<%= pie_chart current_user.stocks.group(:ticker).sum(@market_value), colors: color %>
<%= pie_chart current_user.stocks.group(:sname).sum(:shares), colors: color %>
